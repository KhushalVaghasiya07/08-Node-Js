        <!-- form -->
        <!-- form -->
        <div class="col-12">
          <form action="/add-movie" method="POST" enctype="multipart/form-data" class="sign__form sign__form--add">
            <div class="row">
              <!-- Movie Name -->
              <div class="col-12">
                <div class="sign__group">
                  <label class="sign__label">Movie Name*</label>
                  <input type="text" class="sign__input" placeholder="Enter movie name" name="movieName" required>
                </div>
              </div>

              <!-- Genre -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Genre*</label>
                  <select id="sign__genre" class="sign__selectjs" name="genre" required>
                    <option value="" disabled selected>Select genre</option>
                    <option value="Action">Action</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Horror">Horror</option>
                    <option value="Sci-Fi">Sci-Fi</option>
                    <option value="Thriller">Thriller</option>
                    <option value="Romance">Romance</option>
                    <option value="Animation">Animation</option>
                    <option value="Documentary">Documentary</option>
                  </select>
                </div>
              </div>

              <!-- Language -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Language*</label>
                  <input type="text" class="sign__input" placeholder="Enter language" name="language" required>
                </div>
              </div>

              <!-- Duration -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Duration (minutes)*</label>
                  <input type="number" class="sign__input" placeholder="Enter duration in minutes" name="duration"
                    required>
                </div>
              </div>

              <!-- Release Date -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Release Date*</label>
                  <input type="date" class="sign__input" name="releaseDate" required>
                </div>
              </div>

              <!-- Ticket Price -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Ticket Price*</label>
                  <input type="number" step="0.01" class="sign__input" placeholder="Enter ticket price"
                    name="ticketPrice" required>
                </div>
              </div>

              <!-- Rating -->
              <div class="col-12 col-md-6">
                <div class="sign__group">
                  <label class="sign__label">Rating (1-10)*</label>
                  <input type="number" min="1" max="10" class="sign__input" placeholder="Enter rating (1-10)"
                    name="rating" required>
                </div>
              </div>

              <!-- Description -->
              <div class="col-12">
                <div class="sign__group">
                  <label class="sign__label">Description*</label>
                  <textarea class="sign__textarea" placeholder="Enter movie description" name="description"
                    required></textarea>
                </div>
              </div>

              <!-- Image -->
              <div class="col-12">
                <div class="sign__group">
                  <label class="sign__label">Movie Image</label>
                  <div class="sign__gallery" id="cover-preview">
                    <label id="gallery1" for="sign__gallery-upload">Upload movie poster</label>
                    <input data-name="#gallery1" id="sign__gallery-upload" name="image" class="sign__gallery-upload"
                      type="file" accept="image/*">
                    <img id="image-preview" src="" alt="Preview"
                      style="display:none; margin-top:10px; max-width:200px; border-radius:8px;">
                  </div>
                </div>
              </div>

              <!-- Submit Button -->
              <div class="col-12">
                <button type="submit" class="sign__btn sign__btn--small"><span>Add Movie</span></button>
              </div>
            </div>
