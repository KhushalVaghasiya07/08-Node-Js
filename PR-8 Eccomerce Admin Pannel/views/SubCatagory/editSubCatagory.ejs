<%- include("../header") %>

  <div class="page-wrapper">
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Add Catagory</h4>
          <div class="ml-auto text-right">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form class="form-horizontal" action="/SubCatagory/editSubCatagory/<%= subCatagory._id %>" method="post">
              <div class="card-body">
                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-right control-label col-form-label">Catagory</label>
                  <div class="col-sm-9">



                    <select name="catagory" class="form-control" required>
                      <option value="">Select Category</option>
                      <% categories.forEach((cat)=> { %>
                        <option value="<%= cat._id %>" <% if(subCatagory.CatagoryTitle &&
                          cat._id.toString()===subCatagory.CatagoryTitle.toString()) { %> selected <% } %>>
                            <%= cat.CatagoryTitle %>
                        </option>
                        <% }); %>
                    </select>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub Catagory Title</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= subCatagory.subCatagoryTitle %>"
                      name="CatagoryTitle" id="title" placeholder="Enter Catagory Title ">
                  </div>
                </div>

              </div>
              <div class="border-top">
                <div class="card-body">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include("../footer") %>