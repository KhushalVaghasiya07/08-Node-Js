<%- include("../header") %>

  <div class="page-wrapper">
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">Add Sub Catagory</h4>
          <div class="ml-auto text-right">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <form class="form-horizontal" action="/ExtraSubCatagory/editExtraSubCatagory/<%= extraCatagory._id %>" method="post">
              <div class="card-body">
                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-right control-label col-form-label">Catagory Title</label>
                  <div class="col-sm-9">
                    <select name="catagory" id="category" class="form-control">
                      <option>Select Category</option>
                      <% catagory.forEach((cat)=> { %>
                        <option value="<%= cat._id %>" <%=(extraCatagory.catagory &&
                          extraCatagory.catagory.toString()===cat._id.toString()) ? "selected" : "" %>>
                          <%= cat.CatagoryTitle %>
                        </option>
                        <% }) %>
                    </select>

                  </div>
                </div>


                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub Catagory Title</label>
                  <div class="col-sm-9">
                    <select name="subCatagoryTitle" id="subCategory" class="form-control">
                      <option>Select Sub Category</option>
                      <% subCat.forEach((sub)=> { %>
                        <option value="<%= sub._id %>" <%=(extraCatagory.subCatagoryTitle &&
                          extraCatagory.subCatagoryTitle.toString()===sub._id.toString()) ? "selected" : "" %>>
                          <%= sub.subCatagoryTitle %>
                        </option>
                        <% }) %>
                    </select>

                  </div>
                </div>
                <div class="form-group row">
                  <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub Category Name</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="<%= extraCatagory.extraSubCatagoryTitle %>" name="extraSubCatagoryTitle" id="title"
                      placeholder="Enter Sub Catagory Here... ">
                  </div>
                </div>

              </div>
              <div class="border-top">
                <div class="card-body">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include("../footer") %>

      <script>
        document.addEventListener('DOMContentLoaded', () => {
          let category = document.getElementById("category")
          let subCatagory = document.getElementById("subCatagory")

