<%- include("../header") %>

  <div class="page-wrapper">
    <div class="page-breadcrumb">
      <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
          <h4 class="page-title">View All Products</h4>
          <div class="ml-auto text-right">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Products</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title m-b-0">Product Information</h5>
            </div>
            <div class="card-body">
              <form>
                <input type="text" name="search" placeholder="Search by product name..." />
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
              </form>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Image</th>
                  <th scope="col">Product Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Sub Category</th>
                  <th scope="col">Extra Sub Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Discount (%)</th>
                  <th scope="col">Description</th>
                  <th scope="col" colspan="2">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (products && products.length> 0) { %>
                  <% products.forEach((product, idx)=> { %>
                    <tr>
                      <td>
                        <%= idx + 1 %>
                      </td>
                      <td>
                        <% if(product.productImage) { %>
                          <img src="<%= product.productImage %>" alt="Product Image" height="50"
                            style="object-fit:cover;">
                          <% } else { %>
                            <span>No Image</span>
                            <% } %>
                      </td>
                      <td>
                        <%= product.productName %>
                      </td>
                      <td>
                        <%= product.category ? product.category.CatagoryTitle : '' %>
                      </td>
                      <td>
                        <%= product.subCategoryTitle ? product.subCategoryTitle.subCatagoryTitle : '' %>
                      </td>
                      <td>
                        <%= product.extraSubCategoryTitle ? product.extraSubCategoryTitle.extraSubCatagoryTitle : '' %>
                      </td>
                      <td><i class="fas fa-rupee-sign"></i>
                        <%= product.productPrice %>
                      </td>
                      <td>
                        <%= product.productDiscount %>
                      </td>
                      <td>
                        <%= product.productDescription %>
                      </td>
                      <td>
                        <a href="/Product/editProduct/<%= product._id %>"><i class="fas fa-edit"></i></a>
                      </td>
                      <td>
                        <a href="/Product/deleteProduct/<%= product._id %>"><i class="fas fa-trash"></i></a>
                      </td>
                    </tr>
                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="11" class="text-center">No products found.</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("../footer") %>

    <!-- Font Awesome CDN for icons (if not already included in your layout) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">