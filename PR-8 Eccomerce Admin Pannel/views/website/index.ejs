        <li><a href="#"><img src="https://rukminim2.flixcart.com/fk-p-flap/64/64/image/b3020c99672953b9.png?q=100"
              alt=""></i> <span class="category-name">Beauty</span></a></li>
        <li><a href="#"><img src="https://rukminim2.flixcart.com/fk-p-flap/64/64/image/e730a834ad950bae.png?q=100"
              alt=""></i> <span class="category-name">Grocery</span></a></li>
      </ul>
    </div>
  </div>

  <main class="container">

    <section class="hero-slider">
      <div class="slide active">
        <img
          src="https://images.unsplash.com/photo-1607082350899-7e105aa886ae?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          alt="Sale Banner">
        <div class="slide-content">
          <h2>Summer Sale Up To 50% Off</h2>
          <p>Get the best deals on top brands. Limited time offer!</p>
          <a href="#" class="btn">Shop Now</a>
        </div>
      </div>
      <div class="slide">
        <img
          src="https://images.unsplash.com/photo-1607082349566-187342175e2f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          alt="Electronics Banner">
        <div class="slide-content">
          <h2>New Electronics Collection</h2>
          <p>Discover the latest gadgets and technology.</p>
          <a href="#" class="btn">Explore Now</a>
        </div>
      </div>
      <div class="slide">
        <img
          src="https://images.unsplash.com/photo-1611010344444-5f9e4d86a6e1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          alt="Fashion Banner">
        <div class="slide-content">
          <h2>Trending Fashion</h2>
          <p>Update your wardrobe with the latest trends.</p>
          <a href="#" class="btn">Discover Fashion</a>
        </div>
      </div>
      <div class="slider-controls">
        <div class="slider-dot active" data-slide="0"></div>
        <div class="slider-dot" data-slide="1"></div>
        <div class="slider-dot" data-slide="2"></div>
      </div>
    </section>

    <!-- Deals of the Day Section -->

    <div class="deals-section">
      <div class="deals-header">
        <h2 class="section-title">Deals of the Day</h2>
        <div class="deals-timer">
          <i class="fas fa-bolt"></i>
          <span>Ends in</span>
          <span class="timer-digits" id="hours">06</span>h
          <span class="timer-digits" id="minutes">30</span>m
          <span class="timer-digits" id="seconds">00</span>s
        </div>
      </div>

      <div class="products">
        <% products.slice(-4).forEach(product=> { %>
          <a href="/VCart/productView/<%= product.id %>" class="product-card-link">
            <div class="product-card">
              <% if (product.productDiscount && product.productDiscount> 0) { %>
                <span class="product-badge">
                  <%= product.productDiscount %>% Off
                </span>
                <% } %>

                  <div class="product-image">
                    <img src="<%= product.productImage %>" alt="<%= product.productName %>">
                  </div>

                  <div class="product-info">
                    <h3 class="product-name">
                      <%= product.productName %>
                    </h3>

                    <div class="product-rating">
                      <div class="stars">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                      </div>
                      <span class="rating-count">(1,234)</span>
                    </div>

                    <div class="product-price">
                      <span class="current-price">₹ <%= product.productPrice %></span>
                      <% if (product.productDiscount && product.productDiscount> 0) { %>
                        <span class="original-price">
                          ₹ <%= Math.round(product.productPrice / (1 - product.productDiscount / 100)) %>
                        </span>
                        <span class="discount">
                          <%= product.productDiscount %>% off
                        </span>
                        <% } %>
                    </div>

                    <p class="product-description">
                      <%= product.productDescription %>
                    </p>

                    <div class="product-actions">
                      <button class="add-to-cart">Add to Cart</button>
                      <button class="buy-now">Buy Now</button>
                    </div>
                  </div>
            </div>
          </a>
          <% }) %>
      </div>
    </div>



    <!-- Categories Section -->
    <h2 class="section-title">Shop By Category <a href="#" class="view-all">View All</a></h2>
    <div class="categories">
      <div class="category-card">
        <i class="fas fa-mobile-alt"></i>
        <h3>Electronics</h3>
      </div>
      <div class="category-card">
        <i class="fas fa-tshirt"></i>
        <h3>Fashion</h3>
      </div>
      <div class="category-card">
        <i class="fas fa-utensils"></i>
        <h3>Home & Kitchen</h3>
      </div>
      <div class="category-card">
        <i class="fas fa-running"></i>
        <h3>Sports</h3>
      </div>
      <div class="category-card">
        <i class="fas fa-book"></i>
        <h3>Books</h3>
      </div>
      <div class="category-card">
        <i class="fas fa-gamepad"></i>
        <h3>Toys & Games</h3>
      </div>
    </div>

    <!-- Dynamic Featured Products Section -->
    <h2 class="section-title">Featured Products <a href="#" class="view-all">View All</a></h2>
    <div class="products">
      <% products.forEach(product=> { %>
        <a href="/VCart/productView/<%= product._id %>" class="product-card-link">
          <div class="product-card">
            <% if (product.productDiscount && product.productDiscount> 0) { %>
              <span class="product-badge">
                <%= product.productDiscount %>% Off
              </span>
              <% } %>
                <div class="product-image">
                  <img src="<%= product.productImage %>" alt="<%= product.productName %>">
                </div>
                <div class="product-info">
                  <h3 class="product-name">
                    <%= product.productName %>
                  </h3>
                  <div class="product-rating">
                    <div class="stars">
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star-half-alt"></i>
                    </div>
                    <span class="rating-count">(1,234)</span>
                  </div>
                  <div class="product-price">
                    <span class="current-price">₹ <%= product.productPrice %></span>
                    <% if (product.productDiscount && product.productDiscount> 0) { %>
                      <span class="original-price">₹ <%= Math.round(product.productPrice / (1 - product.productDiscount
                          / 100)) %></span>
                      <span class="discount">
                        <%= product.productDiscount %>% off
                      </span>
                      <% } %>
                  </div>
                  <p class="product-description">
                    <%= product.productDescription %>
                  </p>
                  <div class="product-actions">
                    <button class="add-to-cart">Add to Cart</button>
                    <button class="buy-now">Buy Now</button>
                  </div>
                </div>
          </div>
        </a>
        <% }) %>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="footer-content">
        <div class="footer-column">
          <h3>About VCart</h3>
          <ul>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Careers</a></li>
