    <style>
      :root {
        --accent-green: #28b779;
        --accent-orange: #da542e;
        --accent-yellow: #ffb848;
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffffff;
        color: #334155;
      }

      .gradient-text {
        background: linear-gradient(90deg, var(--accent-orange) 0%, var(--accent-yellow) 50%, var(--accent-green) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .nav-link {
        position: relative;
        transition: all 0.3s ease;
      }

      .nav-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 3px;
        bottom: -5px;
        left: 0;
        background: linear-gradient(90deg, var(--accent-orange) 0%, var(--accent-yellow) 50%, var(--accent-green) 100%);
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .tag {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-right: 8px;
      }

      .blog-card {
        transition: all 0.3s ease;
        overflow: hidden;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
      }

      .blog-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
      }

      .blog-card img {
        transition: transform 0.5s ease;
      }

      .blog-card:hover img {
        transform: scale(1.08);
      }

      .category-filter {
        transition: all 0.3s ease;
        border-radius: 20px;
        font-weight: 500;
      }

      .category-filter.active {
        background: linear-gradient(90deg, var(--accent-orange) 0%, var(--accent-yellow) 100%);
        color: white;
      }

      .floating {
        animation: float 6s ease-in-out infinite;
      }

      @keyframes float {
        0% {
          transform: translateY(0px);
        }

        50% {
          transform: translateY(-12px);
        }

        100% {
          transform: translateY(0px);
        }
      }

      .pulse {
        animation: pulse 2s ease-in-out infinite alternate;
      }

      @keyframes pulse {
        from {
          transform: scale(1);
        }

        to {
          transform: scale(1.05);
        }
      }

      .subscribe-input {
        border-radius: 50px 0 0 50px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
      }

      .subscribe-btn {
        border-radius: 0 50px 50px 0;
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.08);
      }

      .testimonial-card {
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
      }

      .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
      }

      .social-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
      }

      .social-icon:hover {
        transform: translateY(-3px);
      }
    </style>
